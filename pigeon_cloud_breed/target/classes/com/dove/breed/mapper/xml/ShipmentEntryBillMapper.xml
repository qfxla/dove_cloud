<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dove.breed.mapper.ShipmentEntryBillMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dove.breed.entity.ShipmentEntryBill">
        <id column="id" property="id" />
        <result column="shipment_id" property="shipmentId" />
        <result column="shipment_name" property="shipmentName" />
        <result column="handler" property="handler" />
        <result column="amount" property="amount" />
        <result column="total" property="total" />
        <result column="remark" property="remark" />
        <result column="guige" property="guige" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
        <result column="is_deleted" property="deleted" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, shipment_id, shipment_name, handler, amount, total, remark,gmt_create, gmt_modified, is_deleted, version
    </sql>

    <sql id="ShipmentEntryBillVo">
        id,shipment_id,shipment_name,handler,amount,total,remark,guige,gmt_create,gmt_modified
    </sql>

    <select id="findBillByGmt_createAndShipmentId" resultType="com.dove.breed.entity.vo.ShipmentEntryBillVo" resultMap="BaseResultMap">
        SELECT
        <include refid="ShipmentEntryBillVo"/>
        FROM t_shipment_entry_bill
        WHERE shipment_id = #{shipmentId} And gmt_create between #{startTime} and #{endTime}
    </select>

    <select id="getLatestBillId" resultType="java.lang.Long">
        SELECT MAX(id) FROM t_shipment_entry_bill;
    </select>


</mapper>
