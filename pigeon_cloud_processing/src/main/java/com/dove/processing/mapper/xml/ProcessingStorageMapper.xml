<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dove.processing.mapper.ProcessingStorageMapper">

    <sql id="selectAllStorage">
        select id,type_id,type_name,specification,price,count,total,preprice,refer_price,remark
        from t_processing_storage
    </sql>

    <select id="getStorageInfoByLikeSearch" resultType="com.dove.processing.entity.Vo.ProcessingStorageVo">
        <include refid="selectAllStorage"/>
        <if test="value != null and value!='' and value!='null'">
            where is_deleted =0
            and concat(type_name,remark) like '%${value}%'
        </if>
        order by gmt_create desc
        limit ${no},${size}
    </select>

    <select id="getStorageInfoByPage" resultType="com.dove.processing.entity.Vo.ProcessingStorageVo">
        <include refid="selectAllStorage"/>
        where is_deleted =0
        <if test="no !=null and size != null">
            order by gmt_create desc
            limit ${no},${size}
        </if>
    </select>
</mapper>
