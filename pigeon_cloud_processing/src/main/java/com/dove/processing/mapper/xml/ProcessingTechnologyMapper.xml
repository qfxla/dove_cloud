<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dove.processing.mapper.ProcessingTechnologyMapper">

<sql id="selectAllTechnology">
    select technology_id,technology_name,technology_describe,process_id
    from t_processing_technology
</sql>

    <select id="getTechnologyInfoById" resultType="com.dove.processing.entity.Vo.ProcessingFlowVo">
        select t.process_id,t.processing_id,t.process_id,t.process_name,t.process_describe,
        from t_processing_flow as t
        <if test="id !=null and id != '' and id != 'null'">
            inner join t_processing_technology as p
            on t.process_id = p.process_id
            where p.technology_id = #{id}
            and t.is_deleted =0 and p.is_deleted =0
            <if test="no !=null and size != null">
                order by t.gmt_create desc
                limit ${no},${size}
            </if>
        </if>
    </select>

    <select id="getTechnologyInfoByPage" resultType="com.dove.processing.entity.Vo.ProcessingTechnologyVo">
        <include refid="selectAllTechnology"/>
        where is_deleted =0
        <if test="no !=null and size != null">
            order by gmt_create desc
            limit ${no},${size}
        </if>
    </select>

    <select id="getTechnologyInfoByLikeSearch" resultType="com.dove.processing.entity.Vo.ProcessingTechnologyVo">
        <include refid="selectAllTechnology"/>
        <if test="value != null and value!='' and value!='null'">
            where is_deleted =0
            and technology_name like '%${value}%'
        </if>
        order by gmt_create desc
        limit ${no},${size}
    </select>
</mapper>
