<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dove.processing.mapper.ProcessingBatchMapper">

<sql id="selectAllBatch">
    select batch_id ,sh_batch,processing_id,process_name,process_describe,principal,processing_time
    from t_processing_batch
</sql>

    <select id="getBatchsyLikeSearch" resultType="com.dove.processing.entity.Vo.ProcessingBatchVo">
        <include refid="selectAllBatch"/>
        <if test="value != null and value!='' and value!='null'">
            where concat(process_name,principal) like '%${value}%'
            and is_deleted = 0
        </if>
        order by gmt_create desc
        limit ${no},${size}
    </select>

    <select id="getInfoByPage" resultType="com.dove.processing.entity.Vo.ProcessingBatchVo">
        <include refid="selectAllBatch"/>
        where is_deleted =0
        <if test="no !=null and size != null">
            order by gmt_create desc
            limit ${no},${size}
        </if>
    </select>
</mapper>
